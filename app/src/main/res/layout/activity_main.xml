<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainRv"
        android:layout_width="392dp"
        android:layout_height="570dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/typeET"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Type"
        style="@style/EtStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainRv"
        />

    <EditText
        android:id="@+id/feelingET"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Feeling after waking up"
        style="@style/EtStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/typeET"
        />

    <EditText
        android:id="@+id/hourET"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:hint="Hours"
        style="@style/EtStyle"
        app:layout_constraintStart_toEndOf="@id/feelingET"
        app:layout_constraintTop_toBottomOf="@id/btnE"
        />

    <EditText
        android:id="@+id/reasonET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Why?"
        style="@style/EtStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feelingET"
        />

    <Button
        android:id="@+id/btnE"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Enter"
        style="@style/EtStyle"
        android:background="@drawable/rec_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/typeET"
        app:layout_constraintTop_toBottomOf="@id/mainRv" />


</androidx.constraintlayout.widget.ConstraintLayout>