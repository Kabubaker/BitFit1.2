<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/typeTV"
        android:layout_width="250dp"
        android:layout_height="50dp"
        style="@style/EtStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/feelingTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/EtStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/typeTV"/>

    <TextView
        android:id="@+id/hoursTV"
        android:layout_width="150dp"
        android:layout_height="50dp"
        style="@style/EtStyle"
        app:layout_constraintStart_toEndOf="@id/typeTV"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/reasonTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/EtStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feelingTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>